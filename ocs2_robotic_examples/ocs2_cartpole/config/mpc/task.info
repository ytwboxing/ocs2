; cartpole parameters
cartpole_parameters
{
  cartMass     1.0
  poleMass     1.0
  poleLength   1.0
  gravity      9.81
}

; DDP settings
ddp
{
  algorithm                      SLQ

  nThreads                       1

  maxNumIterations               200
  minRelCost                     0.1
  constraintTolerance            1e-2

  displayInfo                    false
  displayShortSummary            true
  checkNumericalStability        false

  AbsTolODE                      1e-9
  RelTolODE                      1e-6
  maxNumStepsPerSecond           100000
  timeStep                       5e-2
  backwardPassIntegratorType     EULER

  preComputeRiccatiTerms         true

  useFeedbackPolicy              false

  strategy                       LINE_SEARCH
  lineSearch
  {
    minStepLength                1e-3
    maxStepLength                1.0
    hessianCorrectionStrategy    DIAGONAL_SHIFT ; DIAGONAL_SHIFT, CHOLESKY_MODIFICATION, EIGENVALUE_MODIFICATION, GERSHGORIN_MODIFICATION
    hessianCorrectionMultiple    1e-6
  }
}

; ddp Rollout settings
